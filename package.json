{
  "name": "@getanima/core",
  "version": "1.2.1",
  "description": "Identity and memory infrastructure for AI agents",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "anima": "dist/cli.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/*.d.ts",
    "dist/*.d.ts.map",
    "dist/esm",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json && tsc -p tsconfig.cli.json",
    "dev": "tsc --watch",
    "test": "vitest",
    "prepublishOnly": "npm run build && npm test -- --run",
    "lint": "eslint src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getanima/anima.git"
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "identity",
    "persistence",
    "llm",
    "framework",
    "personality",
    "opinions",
    "episodic-memory",
    "relationships",
    "behavioral-state",
    "conflict-detection",
    "typescript",
    "sdk",
    "autonomous-agents",
    "cognitive-architecture"
  ],
  "author": "Kip <kip@getanima.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/getanima/anima/issues"
  },
  "homepage": "https://getanima.net",
  "devDependencies": {
    "@types/node": "^25.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
